{
    "name": "horizon-bridge",
    "version": "1.0.0",
    "description": "Harmony Horizon Bridge",
    "scripts": {
        "libInit": "tar -zxf ethereumjs-ethash-dist.tar.gz -C node_modules/@ethereumjs/ethash",
        "init-yarn": "yarn install; yarn upgrade isomorphic-rpc@1.2.2; cd ./src/cli; yarn install; cd ../elc; yarn install; cd ../eprover; yarn install; cd ../eth2hmy-relay; yarn install; cd ../..; hardhat clean; hardhat compile",
        "init-chain": "rm -rf ./localgeth/data; cp -rf ../initData/localgeth/data ./localgeth/.; rm -rf ./data/dag/*; cp -rf ../initData/dag/* ./data/dag/.; rm -rf ./deployments/localgeth; rm -rf ./deployments/localnet; rm ./.openzeppelin/unknown-8788.json; rm ./.openzeppelin/unknown-1666700000.json",
        "hardhat-local": "npx hardhat node --no-deploy",
        "geth-local": "geth --datadir ./localgeth/data --networkid 8788 --nat extip:127.0.0.1 --mine --miner.threads=1 --miner.etherbase=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266  --http --http.api='eth,net,web3,personal' --http.port=8645 --http.corsdomain '*' --ws --ws.api='db,eth,net,web3,personal' --ws.port=8646 --syncmode full  --gcmode archive",
        "harmony-local": "cd $GOPATH/src/github.com/harmony-one/harmony; make debug",
        "harmony-local-kill": "cd $GOPATH/src/github.com/harmony-one/harmony; make debug-kill",
        "clean": "hardhat clean",
        "check": "hardhat check",
        "compile": "hardhat compile",
        "deploy-hardhat": "hardhat deploy --network hardhat --tags Ethereum",
        "deploy-localgeth": "hardhat deploy --network localgeth --tags Ethereum",
        "deploy-localnet": "hardhat deploy --network localnet --tags Harmony",
        "deploy-devnet": "hardhat deploy --network devnet --tags Harmony",
        "deploy-testnet": "hardhat deploy --network testnet --tags Harmony",
        "deploy-sepolia": "hardhat deploy --network sepolia --tags Ethereum",
        "deploy-ropsten": "hardhat deploy --network ropsten --tags Ethereum",
        "deploy-hardhat-lightClient": "hardhat deploy --network hardhat --tags HarmonyLightClient",
        "deploy-hardhat-tokenLocker": "hardhat deploy --network hardhat --tags TokenLockerOnEthereum",
        "deploy-hardhat-tokenFaucet": "hardhat deploy --network hardhat --tags EthFaucetToken",
        "deploy-localnet-lightClient": "hardhat deploy --network localnet --tags EthereumLightClient",
        "deploy-localnet-tokenLocker": "hardhat deploy --network localnet --tags TokenLockerOnHarmony",
        "deploy-localnet-tokenFaucet": "hardhat deploy --network localnet --tags ONEFaucetToken",
        "deploy-testnet-lightClient": "hardhat deploy --network testnet --tags EthereumLightClient",
        "deploy-testnet-tokenLocker": "hardhat deploy --network testnet --tags TokenLockerOnHarmony",
        "deploy-testnet-tokenFaucet": "hardhat deploy --network testnet --tags ONEFaucetToken",
        "lint": "eslint ./deploy ./src ./test",
        "lint-fix": "eslint ./deploy ./src ./test --fix",
        "coverage": "npx hardhat coverage",
        "show-coverage": "cd ./coverage; python3 -m http.server 7800",
        "deploy": "npx hardhat run scripts/deploy.ts",
        "deployFaucet": "npx hardhat deploy --tags Deploy",
        "deployFaucetRopsten": "npx hardhat deploy --tags DeployRopsten",
        "upgradeFaucet": "npx hardhat deploy --tags Upgrade",
        "gas": "REPORT_GAS=true npx hardhat test",
        "test": "npx hardhat test",
        "cli": "node src/cli/index.js"
    },
    "license": "UNLICENSED",
    "devDependencies": {
        "@atixlabs/hardhat-time-n-mine": "^0.0.5",
        "@nomiclabs/hardhat-ethers": "^2.0.6",
        "@nomiclabs/hardhat-etherscan": "^3.0.3",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@openzeppelin/contracts-upgradeable": "^4.6.0",
        "@openzeppelin/hardhat-upgrades": "^1.17.0",
        "@primitivefi/hardhat-dodoc": "^0.2.3",
        "@typechain/ethers-v5": "^7.2.0",
        "@typechain/hardhat": "^2.3.1",
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^12.20.52",
        "@typescript-eslint/eslint-plugin": "^5.27.1",
        "@typescript-eslint/parser": "^5.27.1",
        "chai": "^4.3.6",
        "dotenv": "^16.0.1",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "eth-proof": "^2.1.6",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.6.7",
        "hardhat": "^2.9.6",
        "hardhat-abi-exporter": "^2.9.0",
        "hardhat-deploy": "^0.11.10",
        "hardhat-gas-reporter": "^1.0.8",
        "hardhat-spdx-license-identifier": "^2.0.3",
        "merkle-patricia-tree": "^4.2.4",
        "prettier": "^2.6.2",
        "prettier-plugin-solidity": "^1.0.0-beta.13",
        "solhint": "^3.3.7",
        "solidity-coverage": "^0.7.21",
        "ts-node": "^10.7.0",
        "typechain": "^5.2.0",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "eslint-plugin-n": "^15.2.2",
        "isomorphic-rpc": "1.2.2"
    }
}