{
  "name": "horizon-bridge",
  "version": "1.0.0",
  "description": "Harmony Horizon Bridge",
  "scripts": {
    "libInit": "tar -zxf ethereumjs-ethash-dist.tar.gz -C node_modules/@ethereumjs/ethash",
    "init-all": "yarn install; cd ./src/cli; yarn install; cd ../elc; yarn install; cd ../eprover; yarn install; cd ../eth2hmy-relay; yarn install; cd ../..; hardhat clean; hardhat compile",
    "check": "npx hardhat check",
    "compile": "npx hardhat compile",
    "deploy-hardhat": "hardhat deploy --network hardhat --tags Ethereum",
    "deploy-hardhat-lightClient": "hardhat deploy --network hardhat --tags HarmonyLightClient",
    "deploy-hardhat-tokenLocker": "hardhat deploy --network hardhat --tags TokenLockerOnEthereum",
    "deploy-hardhat-tokenFaucet": "hardhat deploy --network hardhat --tags EthFaucetToken",
    "deploy-localnet": "hardhat deploy --network localnet --tags Harmony",
    "deploy-localnet-lightClient": "hardhat deploy --network localnet --tags EthereumLightClient",
    "deploy-localnet-tokenLocker": "hardhat deploy --network localnet --tags TokenLockerOnHarmony",
    "deploy-localnet-tokenFaucet": "hardhat deploy --network localnet --tags ONEFaucetToken",
    "lint": "eslint ./deploy ./src ./test",
    "lint-fix": "eslint ./deploy ./src ./test --fix",
    "coverage": "npx hardhat coverage",
    "eth-local": "npx hardhat node --no-deploy",
    "harmony-local": "cd $GOPATH/src/github.com/harmony-one/harmony; make debug",
    "harmony-local-kill": "cd $GOPATH/src/github.com/harmony-one/harmony; make debug-kill",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "deployFaucet": "npx hardhat deploy --tags Deploy",
    "deployFaucetRopsten": "npx hardhat deploy --tags DeployRopsten",
    "upgradeFaucet": "npx hardhat deploy --tags Upgrade",
    "gas": "REPORT_GAS=true npx hardhat test",
    "test": "npx hardhat test"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@atixlabs/hardhat-time-n-mine": "^0.0.5",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.52",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "eth-proof": "^2.1.6",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.7",
    "hardhat": "^2.9.6",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-deploy": "^0.11.10",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "merkle-patricia-tree": "^4.2.4",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {}
}